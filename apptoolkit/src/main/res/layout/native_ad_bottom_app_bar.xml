<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/native_bottom_app_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurfaceContainer"
        android:gravity="center_vertical"
        android:minHeight="56dp"
        android:orientation="horizontal"
        android:paddingStart="@dimen/native_ad_bottom_bar_horizontal_padding"
        android:paddingTop="@dimen/native_ad_bottom_bar_vertical_padding"
        android:paddingEnd="@dimen/native_ad_bottom_bar_horizontal_padding"
        android:paddingBottom="@dimen/native_ad_bottom_bar_vertical_padding">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/native_ad_label"
            style="@style/TextAppearance.Material3.LabelSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/native_ad_label_background"
            android:paddingStart="@dimen/native_ad_bottom_bar_label_horizontal_padding"
            android:paddingTop="@dimen/native_ad_bottom_bar_label_vertical_padding"
            android:paddingEnd="@dimen/native_ad_bottom_bar_label_horizontal_padding"
            android:paddingBottom="@dimen/native_ad_bottom_bar_label_vertical_padding"
            android:text="@string/ad"
            android:textColor="?attr/colorPrimary" />

        <com.google.android.gms.ads.nativead.AdChoicesView
            android:id="@+id/native_ad_choices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/native_ad_bottom_bar_spacing" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/native_ad_icon"
            android:layout_width="@dimen/native_ad_bottom_bar_icon_size"
            android:layout_height="@dimen/native_ad_bottom_bar_icon_size"
            android:layout_marginStart="@dimen/native_ad_bottom_bar_spacing"
            android:contentDescription="@string/ad"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Small"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/native_ad_headline"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/native_ad_bottom_bar_spacing"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:visibility="gone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/native_ad_call_to_action"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/native_ad_bottom_bar_spacing"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="@dimen/native_ad_bottom_bar_button_horizontal_padding"
            android:paddingEnd="@dimen/native_ad_bottom_bar_button_horizontal_padding"
            android:textAllCaps="false"
            android:visibility="gone" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</com.google.android.gms.ads.nativead.NativeAdView>
